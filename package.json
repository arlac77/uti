{
  "name": "uti",
  "description": "javascript implementation of a \"Uniform Type Identifier\" (UTI)",
  "main": "index.js",
  "scripts": {
    "cover": "node --harmony ./node_modules/istanbul/lib/cli.js cover --hook-run-in-context ./node_modules/mocha/bin/_mocha -- --R spec --U exports tests",
    "doc": "./node_modules/.bin/jsdoc index.js",
    "test": "mocha --harmony_shipping tests/*.js && markdown-doctest",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arlac77/uti.git"
  },
  "engines": {
    "node": ">=4.2"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "coveralls": "2.11.12",
    "cracks": "^3.1.2",
    "cz-conventional-changelog": "^1.1.7",
    "markdown-doctest": "^0.7.0",
    "istanbul": "0.4.4",
    "jsdoc": "3.4.0",
    "mocha": "3.0.2",
    "semantic-release": "6.3.0"
  },
  "keywords": [
    "MIME",
    "UTI",
    "file type"
  ],
  "author": "Markus Felten <markus.felten@gmx.de>",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/arlac77/uti/issues"
  },
  "homepage": "https://github.com/arlac77/uti#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
